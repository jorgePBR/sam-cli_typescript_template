{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "es2015"
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "types": [
      "node",
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true
  },
  "include": [
    "src"
  ]
}
